#!/usr/bin/env ruby

require 'rubygems'

gem 'eventmachine'
require 'eventmachine'

$LOAD_PATH << File.expand_path('../../lib', File.dirname(__FILE__))

require 'skein'

# == Support Classes ========================================================

class EchoWorker < Skein::Client::Worker
  def echo(*args)
    EventMachine.next_tick do
      yield(*args)
    end
  end

  def async?
    true
  end
end

# == Main ===================================================================

EventMachine.run do
  EchoWorker.new('test_echo')
end
